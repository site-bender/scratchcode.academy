---
import { Article, collapseWhitespace } from "@sitebender/components";
import Layout from "~layouts/index.astro";
import Glossinator from "~components/Glossinator/index.astro";
import type { PageMeta } from "@sitebender/components/src/types";

export const metadata: Partial<PageMeta> = {
	author: "Charles F. Munat, coder@scratchcode.academy",
	carbon: {
		beacon: {
			href: "https://digitalbeacon.co/report/scratchcode-academyglossaryv",
			firstCarbon: 0.01,
			grade: "A+",
			repeatCarbon: 0.006,
		},
		ecograder: {
			href: "https://ecograder.com/report/KwlHJDNEYiLx9RuZBxhW4JZm",
			score: 83,
		},
		webCarbon: {
			count: 0.01,
			href: "https://www.websitecarbon.com/website/scratchcode-academy-glossary-v/",
			percentage: 99,
		},
	},
	description: collapseWhitespace(`
		V is for vanilla: the glossary page for terms beginning with
		V for the ScratchCode website. Craft code is code made with
		skill and ingenuity.
	`),
	keywords: ["craft code", "glossary", "vanilla code", "virtual communities"],
	label: "V is for vanilla",
	next: "/glossary/w",
	pageTitle: "V is for vanilla ~ ScratchCode glossary",
	prev: "/glossary/u",
	title: "V is for vanilla",
};

const { pageTitle, title } = metadata;
---

<Layout {metadata} title={pageTitle}>
	<Article id="main-content" title={title}>
		<Glossinator />
		<dl class="sb-glossary">
			<dt id="vanilla-code"><dfn>vanilla code</dfn></dt><dd>
				<strong>Vanilla code</strong> is code written without recourse to
				dependencies on external libraries or frameworks. For our purposes,
				vanilla code means:
			</dd><dd>
				<ul>
					<li>
						Using <a href="/glossary/h#html" rel="glossary">semantic HTML</a>
						 written directly by the coder, rather than generated by an external
						library, such as
						<a href="https://react.dev/" rel="external">React</a>
					</li><li>
						Using plain
						<a href="/glossary/c#css" rel="glossary">CSS</a> without resorting
						to an external library such as <a
							href="https://tailwindcss.com/"
							rel="external">Tailwind</a
						>
					</li><li>
						Writing simple <a href="/glossary/j#javascript" rel="external"
							>JavaScript</a
						>
						 by hand using built in
						<a href="/glossary/w#web-apis" rel="glossary">Web APIs</a> in the
						<a href="/glossary/b#browser" rel="glossary">browser</a>, rather
						than external libraries
					</li>
				</ul>
			</dd>
			<dt id="virtual-communities"><dfn>virtual communities</dfn></dt><dd>
				A <strong>virtual community</strong> is a social network of individuals
				who connect through specific <a
					href="/glossary/s#social-media"
					rel="glossary">social media</a
				>, potentially crossing geographical and political boundaries in order
				to pursue mutual interests or goals. Some of the most pervasive virtual
				communities are online communities operating under social networking
				services.
			</dd><dd>
				<cite
					>Source: <a
						href="https://en.wikipedia.org/wiki/Virtual_community"
						rel="external">Virtual community</a
					></cite
				>
			</dd>
		</dl>
	</Article>
</Layout>
